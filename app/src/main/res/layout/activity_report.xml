<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/reportTb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:contentInsetStart="0dp">

        <TextView
            style="@style/boldFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/report" />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_centerInParent="true"
        android:background="#D9D9D9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ‘닉네임1’ 사용자를 신고하는 이유를 선택해주세요. -->
        <TextView
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="33dp"
            android:gravity="bottom"
            android:text="‘닉네임1’\n사용자를 신고하는 이유를 선택해주세요."
            android:textColor="#3A3A3A"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="370dp"
            android:layout_height="0.7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="21dp"
            android:background="#D9D9D9" />

        <Button
            android:id="@+id/reason1"
            style="?android:borderlessButtonStyle"
            android:layout_width="400dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/btn_next"
            android:gravity="center_vertical"
            android:text="시간약속을 안지켜요"
            android:textColor="#3A3A3A"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="370dp"
            android:layout_height="0.7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#D9D9D9" />

        <Button
            android:id="@+id/reason2"
            style="?android:borderlessButtonStyle"
            android:layout_width="400dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/btn_next"
            android:gravity="center_vertical"
            android:text="욕설을 해요"
            android:textColor="#3A3A3A"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="370dp"
            android:layout_height="0.7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#D9D9D9" />

        <Button
            android:id="@+id/reason3"
            style="?android:borderlessButtonStyle"
            android:layout_width="400dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/btn_next"
            android:gravity="center_vertical"
            android:text="성희롱 해요"
            android:textColor="#3A3A3A"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="370dp"
            android:layout_height="0.7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#D9D9D9" />

        <Button
            android:id="@+id/reason4"
            style="?android:borderlessButtonStyle"
            android:layout_width="400dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/btn_next"
            android:gravity="center_vertical"
            android:text="사기당했어요"
            android:textColor="#3A3A3A"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="370dp"
            android:layout_height="0.7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#D9D9D9" />

        <Button
            android:id="@+id/reason5"
            style="?android:borderlessButtonStyle"
            android:layout_width="400dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/btn_next"
            android:gravity="center_vertical"
            android:text="돈 입금이 늦었어요"
            android:textColor="#3A3A3A"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="370dp"
            android:layout_height="0.7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#D9D9D9" />

        <Button
            android:id="@+id/reason6"
            style="?android:borderlessButtonStyle"
            android:layout_width="400dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/btn_next"
            android:gravity="center_vertical"
            android:text="관련없는 게시글을 작성했어요"
            android:textColor="#3A3A3A"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="370dp"
            android:layout_height="0.7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#D9D9D9" />

        <Button
            android:id="@+id/reason7"
            style="?android:borderlessButtonStyle"
            android:layout_width="400dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/btn_next"
            android:gravity="center_vertical"
            android:text="관련없는 대화를 시도해요"
            android:textColor="#3A3A3A"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="370dp"
            android:layout_height="0.7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#D9D9D9" />
    </LinearLayout>
</LinearLayout>